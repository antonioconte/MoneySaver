<% include ../partials/header %>
  <section class="content-header">
    <h1>
    </h1>
  </section>

  <section class="content">
    <div class="col-md-12">
      <% if(error_msg && error_msg!= ""){ %>
          <div class="alert alert-danger">
          <% for(var i = 0; i < error_msg.length; i++){ %>
            <li>
              <%= error_msg[i].msg %>
            </li>
          <% } %>
        </div>
      <% } %>
      <% if(success_msg && success_msg!= ""){ %>
      <div class="alert alert-success">
        <%= success_msg %>
      </div>
      <% } %>
              <!-- Horizontal Form -->
              <div class="box box-info">
                <div class="box-header with-border">
                  <h3 class="box-title">New Post</h3>
                </div>

                <!-- /.box-header -->
                <!-- form start -->
                <form action="/post/new" method="post" class="form-horizontal">

                  <div class="box-body">
                    <div class="form-group">
                      <label class="col-sm-2 control-label">Textarea</label>
                        <div class="col-sm-8">
                      <textarea class="form-control" rows="3" name="text_post" placeholder="Enter ..."></textarea>
                    </div>
                    </div>

                  </div>
                  <!-- /.box-body -->
                  <div class="box-footer">
                    <button ng-click='newPost()' type="submit" class="btn btn-success pull-right">Save</button>
                  </div>
                  <!-- /.box-footer -->
                </form>
              </div>
              <!-- /.box -->

            </div>

  </section>

<% include ../partials/footer %>
