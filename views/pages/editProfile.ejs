<% include ../partials/header %>
  <section class="content">

    <div class="box">
       <div class="box-header">
          <h3 class="box-title">Edit your Profile</h3>
       </div>
       <form action="/edit" method="POST" class="form-horizontal" enctype="multipart/form-data">
    <div class="box-body">
      <% if(success_msg && success_msg!= ""){ %>
      <div class="alert alert-success">
        <%= success_msg %>
      </div>
      <% }
      if(error_msg && error_msg!= ""){ %>
      <div class="alert alert-danger">
        <% for(var i = 0; i < error_msg.length; i++){ %>
          <li>
            <%= error_msg[i].msg %>
          </li>
        <% } %>
      </div>
      <% }

      if(success_msg == ""){  %>

      <div class="col-md-6">
        <div class="form-group">
           <label for="inputNome" class="col-sm-2 control-label">Nome</label>
           <div class="col-sm-10">
              <input name="nome" value="<%= user.nome %>" type="text" class="form-control" id="inputNome">
           </div>
        </div>
        <div class="form-group">
           <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
           <div class="col-sm-10">
              <input name="email" type="email" value="<%= user.email %>" class="form-control" disabled id="inputEmail3">
           </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
           <label for="inputEta" class="col-sm-2 control-label">Et√†</label>
           <div class="col-sm-10">
              <input name="eta" type="number" value="<%= user.eta %>" class="form-control" id="inputEta">
           </div>
        </div>
        <div class="form-group">
           <label for="inputProfessione" class="col-sm-2 control-label">Professione</label>
           <div class="col-sm-10">
              <input name="prof" type="text" value="<%= user.prof %>" class="form-control" id="inputProfessione">
           </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label" for="exampleInputFile">Avatar</label>
          <div class="col-sm-10">
            <input type="file" name="file" id="exampleInputFile">
          </div>
        </div>
      </div>

      <% } %>

    </div>
    <!-- /.box-body -->
    <%  if(success_msg == ""){  %>
    <div class="box-footer">
      <button type="submit" class="btn btn-success pull-right">Save</button>
      <a href="/">
        <button type="button" class="btn btn-default  pull-right">Cancel</button>
      </a>
    </div>
    <% } %>

    <!-- /.box-footer -->
 </form>
    </div>


  </section>

<% include ../partials/footer %>
